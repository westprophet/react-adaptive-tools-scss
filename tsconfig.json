{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
  },
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "declarations.d.ts",
    "src/**/*",
  ],
  "exclude": [
    "**/*.js",
    "**/*.config.js",
    "node_modules",
    "dist",
    "test",
  ]
}
